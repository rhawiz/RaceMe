<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rawand.raceme.ProfileActivity">

    <TabHost
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/profile_tabhost">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"></TabWidget>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <GridLayout
                    android:id="@+id/profile_my_profile_tab"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:columnCount="8"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp">



                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imgPreview"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:src="@drawable/profile_button"
                            />
                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent">
                            <Button
                                android:id="@+id/edit_profile_button"
                                android:text="@string/profile_edit_profile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                />
                            <Button
                                android:id="@+id/cancel_edit_button"
                                android:layout_below="@+id/edit_profile_button"
                                android:text="@string/profile_cancel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="gone"/>
                            <!-- Capture picture button -->
                            <Button
                                android:id="@+id/btnCapturePicture"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="Take a new photo"
                                android:layout_below="@+id/cancel_edit_button"
                                android:visibility="gone"
                                />

                        </RelativeLayout>
                    </LinearLayout>

                    <TextView
                        android:text="@string/profile_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:id="@+id/name_text"
                        android:layout_marginTop="10dp" />
                    <EditText android:id="@+id/edit_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:inputType="textEmailAddress"
                        android:background="@android:color/transparent"
                        android:hint="Name"
                        android:layout_marginLeft="5dp" />
                    <TextView
                        android:text="@string/profile_surname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:id="@+id/surname_text"
                        android:layout_marginTop="10dp" />
                    <EditText android:id="@+id/edit_surname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:background="@android:color/transparent"
                        android:inputType="textEmailAddress"
                        android:hint="Surname"
                        android:layout_marginLeft="5dp" />


                    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">
                        <RadioButton android:id="@+id/male_radio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/profile_male"/>
                        <RadioButton android:id="@+id/female_radio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/profile_female"/>
                    </RadioGroup>

                    <TextView
                        android:text="@string/profile_email_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:id="@+id/email_text"
                        android:layout_marginTop="10dp" />

                    <EditText android:id="@+id/edit_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:background="@android:color/transparent"
                        android:hint="Email Address"
                        android:layout_marginLeft="5dp" />

                    <Button
                        android:id="@+id/save_button"
                        android:layout_gravity="left|top"
                        android:text="@string/profile_save"
                        android:visibility="invisible"/>






                    <EditText android:id="@+id/hidden_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        />


                </GridLayout>

                <GridLayout
                    android:id="@+id/profile_challenges_tab"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">
                    <TextView
                        android:text="@string/profile_achievements"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>

                    <TableLayout>
                        <TableRow>
                            <TextView
                                android:text="Complete your first route"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:textAppearance="?android:attr/textAppearanceMedium"/>

                            <ImageView
                                android:src="@drawable/run_default"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:maxWidth="42dp"
                                android:maxHeight="42dp" />
                        </TableRow>
                        <TableRow>
                            <TextView
                                android:text="Challenge a friend"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:textAppearance="?android:attr/textAppearanceMedium"/>
                            <ImageView
                                android:src="@drawable/run_default"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:maxWidth="42dp"
                                android:maxHeight="42dp" />
                        </TableRow>
                        <TableRow>
                            <TextView
                                android:text="Complete a friends challenge"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:textAppearance="?android:attr/textAppearanceMedium"/>
                            <ImageView
                                android:src="@drawable/run_default"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:maxWidth="42dp"
                                android:maxHeight="42dp" />
                        </TableRow>
                        <TableRow>
                            <TextView
                                android:text="Run in the rain"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:textAppearance="?android:attr/textAppearanceMedium"/>
                            <ImageView
                                android:src="@drawable/run_default"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:maxWidth="42dp"
                                android:maxHeight="42dp" />
                        </TableRow>
                        <TableRow>
                            <TextView
                                android:text="Run in the sun"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:textAppearance="?android:attr/textAppearanceMedium"/>
                            <ImageView
                                android:src="@drawable/run_default"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:maxWidth="42dp"
                                android:maxHeight="42dp" />
                        </TableRow>
                        <TableRow>
                            <TextView
                                android:text="Run a total of 5 miles"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:textAppearance="?android:attr/textAppearanceMedium"/>
                            <ImageView
                                android:src="@drawable/run_default"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:maxWidth="42dp"
                                android:maxHeight="42dp" />
                        </TableRow>
                        <TableRow>
                            <TextView
                                android:text="Run a total of 10 miles"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:textAppearance="?android:attr/textAppearanceMedium"/>
                            <ImageView
                                android:src="@drawable/run_default"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:maxWidth="42dp"
                                android:maxHeight="42dp" />
                        </TableRow>
                        <TableRow>
                            <TextView
                                android:text="Complete 5 routes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:textAppearance="?android:attr/textAppearanceMedium"/>
                            <ImageView
                                android:src="@drawable/run_default"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:maxWidth="42dp"
                                android:maxHeight="42dp" />
                        </TableRow>
                        <TableRow>
                            <TextView
                                android:text="Complete 5 routes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:textAppearance="?android:attr/textAppearanceMedium"/>
                            <ImageView
                                android:src="@drawable/run_default"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:maxWidth="42dp"
                                android:maxHeight="42dp" />
                        </TableRow>
                        <TableRow>
                            <TextView
                                android:text="Beat your own time on a route"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:textAppearance="?android:attr/textAppearanceMedium"/>
                            <ImageView
                                android:src="@drawable/run_default"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:maxWidth="42dp"
                                android:maxHeight="42dp" />
                        </TableRow>

                    </TableLayout>


                    <TextView
                        android:text="@string/profile_my_challenges"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:textAppearance="?android:attr/textAppearanceLarge"/>


                </GridLayout>

            </FrameLayout>

        </LinearLayout>
    </TabHost>

</RelativeLayout>