<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="10dp"
    android:orientation="vertical"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    tools:context="com.example.rawand.raceme.RegisterActivity">

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:id="@+id/register_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <ScrollView android:id="@+id/register_form" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout android:id="@+id/email_register_form" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/firstname"
                android:layout_row="0"
                android:layout_column="0"
                android:hint="First name"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/surname"
                android:layout_row="1"
                android:layout_column="0"
                android:hint="Surname"
                android:paddingTop="@dimen/custom_y_padding_1"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/email"
                android:layout_row="2"
                android:layout_column="0"
                android:inputType="textEmailAddress"
                android:hint="Email"
                android:paddingTop="@dimen/custom_y_padding_1"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/username"
                android:layout_row="3"
                android:layout_column="0"
                android:inputType="textEmailAddress"
                android:hint="Username"
                android:paddingTop="@dimen/custom_y_padding_1" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/password"
                android:layout_row="4"
                android:layout_column="0"
                android:password="false"
                android:hint="Password"
                android:paddingTop="@dimen/custom_y_padding_1"/>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="5"
                android:orientation="horizontal"
                android:id="@+id/gender_group"
                android:layout_marginTop="10dp">

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:ems="7"
                    android:id="@+id/male_radio"
                    android:checked="true" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:ems="7"
                    android:id="@+id/female_radio" />
            </RadioGroup>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign up"
                android:id="@+id/register_button"
                android:layout_row="6"
                android:layout_column="0"
                android:layout_marginTop="30dp" />

        </GridLayout>
    </ScrollView>
</GridLayout>
